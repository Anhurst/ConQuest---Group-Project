<?xml version="1.0" encoding="utf-8"?>

<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="40dp"
    sothree:umanoShadowHeight="4dp">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/quest_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Quests"
                android:textColor="@color/white"
                android:background="@color/blue"/>

            <Button
                android:id="@+id/profile_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Profile"
                android:textColor="@color/white"
                android:layout_alignParentTop="true"
                android:background="@color/lblue"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="CURRENT QUESTS"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:background="@color/dblue"
            android:textAlignment="center"
            android:paddingTop="10dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/nav_dot_1"
                android:src="@drawable/circle"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_width="15dp"
                android:layout_height="15dp" />


            <ImageView
                android:id="@+id/nav_dot_2"
                android:src="@drawable/circle"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_width="15dp"
                android:layout_height="15dp" />

            <ImageView
                android:id="@+id/nav_dot_3"
                android:src="@drawable/circle"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_width="15dp"
                android:layout_height="15dp" />

            <ImageView
                android:id="@+id/nav_dot_4"
                android:src="@drawable/circle"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_width="15dp"
                android:layout_height="15dp" />

            <ImageView
                android:id="@+id/nav_dot_5"
                android:src="@drawable/circle"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_width="15dp"
                android:layout_height="15dp" />


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/past_quest_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/dblue"
            android:textColor="@color/white"
            android:text="Past Quests"/>

        <ListView
            android:id="@+id/past_quest_list"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"></ListView>
    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>