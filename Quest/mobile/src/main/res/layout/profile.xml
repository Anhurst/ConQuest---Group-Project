<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/quest_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Quests"
            android:textColor="@color/white"
            android:background="@color/blue"/>

        <Button
            android:id="@+id/profile_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Profile"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:background="@color/lblue"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:paddingLeft="10dp"
        android:text="Progress"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <TextView
            android:id="@+id/level_text"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:background="@color/blue"
            android:layout_width="50dp"
            android:layout_height="50dp" />


        <RelativeLayout
            android:layout_centerVertical="true"
            android:id="@+id/exp_bar"
            android:layout_toRightOf="@+id/level_text"
            android:layout_width="250dp"
            android:layout_height="15dp">

            <View
                android:id="@+id/exp_bar_background"
                android:layout_width="250dp"
                android:layout_height="15dp"
                android:background="@color/lblue"/>

            <View
                android:id="@+id/exp_bar_foreground"
                android:layout_width="250dp"
                android:layout_height="15dp"
                android:background="@color/blue"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/level_exp"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:textColor="@color/blue"
            android:layout_toRightOf="@id/level_text"
            android:layout_below="@id/exp_bar"
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:text="234/893"
            />

        <TextView
            android:id="@+id/level_title"
            android:textAlignment="textEnd"
            android:textSize="12sp"
            android:textColor="@color/blue"
            android:text="Social King"
            android:layout_toRightOf="@id/level_exp"
            android:layout_below="@id/exp_bar"
            android:layout_width="100dp"
            android:layout_height="20dp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="24sp"
        android:paddingLeft="10dp"
        android:text="Personal Growth"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:textColor="@color/blue"
            android:paddingLeft="10dp"
            android:text="1. Public Speaking\n2. Self Awareness\n3. Conversation"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textColor="@color/blue"
            android:text="4. Completing Tasks\n5. Social Environment\n"/>

    </LinearLayout>

    <!-- Bar graph-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <View
            android:id="@+id/bar1"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="@color/lblue"/>

        <View
            android:id="@+id/bar2"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="@color/blue"/>

        <View
            android:id="@+id/bar3"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="@color/dblue"/>

        <View
            android:id="@+id/bar4"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="@color/dgreen"/>

        <View
            android:id="@+id/bar5"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="@color/lgreen"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <!-- bar graph labels-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:textAlignment="center"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="1"
            android:textColor="@color/blue"/>

        <TextView
            android:textAlignment="center"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="2"
            android:textColor="@color/blue"/>

        <TextView
            android:textAlignment="center"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="3"
            android:textColor="@color/blue"/>

        <TextView
            android:textAlignment="center"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="4"
            android:textColor="@color/blue"/>

        <TextView
            android:textAlignment="center"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="5"
            android:textColor="@color/blue"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="24sp"
        android:paddingLeft="10dp"
        android:text="Achievements"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/achievement1"
            android:background="@drawable/achievement"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/achievement2"
            android:background="@drawable/achievement"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/achievement3"
            android:background="@drawable/achievement"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/achievement4"
            android:background="@drawable/achievement"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/achievement5"
            android:background="@drawable/achievement"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/achievement6"
            android:background="@drawable/achievement"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/achievement7"
            android:background="@drawable/achievement"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/achievement8"
            android:background="@drawable/achievement"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/achievement9"
            android:background="@drawable/achievement"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/achievement10"
            android:background="@drawable/achievement"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>




</LinearLayout>